
<%= form_for :session, url: login_path, :html => {:class => "form-signin text-center col-md-4 offset-md-4"} do |f|%>
    <h1 class="h3 mb-4 font-weight-normal">Log in</h1>
    
    <%= f.label :email%>
    <%= f.email_field :email, :class => "form-control" %>
    
    <%= f.label :password%>
    <%= f.password_field :password, :class => "form-control" %>
    
    <%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %>
<% end %>



